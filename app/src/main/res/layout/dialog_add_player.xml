<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <vn.asiantech.internship.footballmanager.widgets.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="@dimen/circle_image.width.68dp"
        android:layout_height="@dimen/circle_image.height.68dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_camera" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edittext.add_player.name"/>

    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edittext.add_player.number"/>

    <EditText
        android:id="@+id/edtCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edittext.add_player.country"/>

    <EditText
        android:id="@+id/edtWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edittext.add_player.weight"/>

    <EditText
        android:id="@+id/edtHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edittext.add_player.height"/>

    <EditText
        android:id="@+id/edtPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edittext.add_player.position"/>

    <EditText
        android:id="@+id/edtBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edittext.add_player.birthday"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button.dialog.text.cancel" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button.dialog.text.add" />
    </LinearLayout>
</LinearLayout>
